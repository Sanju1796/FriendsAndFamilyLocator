<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57e1fffd"
    android:orientation="vertical"
    tools:context="com.admin.friendsandfamilylocator.MeetingPlan">

    <android.support.v7.widget.Toolbar
        android:id="@+id/planMeetingToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#00789c"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="Plan a Meeting"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:backgroundTint="#ffff"
        android:background="@drawable/border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group:"

        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="10dp" />

     <Spinner
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         android:popupBackground="#e8f9ff"
         android:layout_marginTop="10dp"
         android:id="@+id/groupMeetingSpinner"></Spinner>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:id="@+id/selectedGroupMembers"
        android:hint="Group Members"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Meeting Title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/meetingTitle"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/meetingDate"
        android:editable="false"
        android:textSize="20sp"
        android:hint="YYYY-MM-DD"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select Time"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/meetingTime"
        android:hint="--:--"
        android:editable="false"
        android:textSize="20sp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:textColor="#FFF"
        android:background="@drawable/roundedbutton"
        android:onClick="next"/>
    </LinearLayout>

</LinearLayout>
