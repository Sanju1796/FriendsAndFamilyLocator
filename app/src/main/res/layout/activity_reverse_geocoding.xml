<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_reverse_geocoding"
    android:orientation="vertical"
    android:background="#57e1fffd"
    android:layout_height="match_parent"
    tools:context="com.admin.friendsandfamilylocator.ReverseGeocodingActivity">

    <fragment
    android:id="@+id/place_autocomplete_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        tools:context="com.admin.friendsandfamilylocator.FriendsLocationMap" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Meeting"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:background="@drawable/roundedbutton"
        android:onClick="schedule"/>

</LinearLayout>
