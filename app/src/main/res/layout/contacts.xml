<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/newGroupLayout"
    android:background="#FFFF">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contactPic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/contactPic"
        android:layout_toRightOf="@+id/contactPic"
        android:textSize="22dp"
        android:id="@+id/contactName"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contactPic"
        android:layout_alignLeft="@+id/contactName"
        android:layout_alignStart="@+id/contactName"
        android:textSize="15dp"
        android:layout_marginBottom="3dp"
        android:textColor="#111111"/>

    <CheckBox
        android:id="@+id/selectContant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/contactName"
        android:layout_alignBottom="@+id/contactName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp" />

</RelativeLayout>